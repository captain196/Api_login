<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:background="@color/orange">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_button"
            android:rotation="180">

        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/karma_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/logout"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/customize"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:textStyle="bold"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pro"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:layout_marginTop="150dp"
        android:background="@drawable/white_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="80dp"
                    android:text="Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#C6323131"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/name_text"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box_shape"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="qwerty@iit.ac.in"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#C8353333"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/location_text"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box_shape"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="14dp"></TextView>

            </LinearLayout>


        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:text="Password"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#C8323131"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/password"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/box_shape"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="+91987654321"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14dp"></TextView>


            <TextView
                android:id="@+id/intrest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Intrest"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#C6323131"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/intrest"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/box_shape"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Football"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14dp"></TextView>

        </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/noti_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Notification"
            android:textColor="#C8272626"
            android:textSize="12dp"
            android:textStyle="bold">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="ON"
            android:textSize="8dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/on_button"
            android:layout_below="@id/l1"
            android:layout_alignParentRight="true"></androidx.appcompat.widget.AppCompatButton>


    </RelativeLayout>




</RelativeLayout>